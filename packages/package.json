{
  "name": "@riski-react-ui-components",
  "version": "0.1.3",
  "description": "A simple button component",
  "main": "dist/index.js",
  "module": "src/index.js",
  "author": "Denis Bykov",
  "scripts": {
    "transpile": "babel src -d dist --ignore '**/*.spec.js,**/*.stories.js'",
    "jest": "jest --coverage --verbose --color"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "setupFiles": [
      "../../setupTests"
    ]
  }
}